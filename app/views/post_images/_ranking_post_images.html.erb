<div class="ranking-post-image">
  <div class="row">
    <% ranking_post_images.each.with_index(1) do |ranking_post_image, i|%>
      <%= link_to post_image_path(ranking_post_image), class: "d-block col-md-3" do %>
          <div class="post-image">
            <h6><%= "第#{i}位"%></h6>
            <%= attachment_image_tag ranking_post_image, :image %>
            <div class="post-image-text pt-2">
              <i class="fas fa-user mr-2"></i><%= ranking_post_image.user.account_name %><br />
              <%= ranking_post_image.title %><br />
              <i class="fas fa-heart mr-1"></i><%= ranking_post_image.favorites.count %>
            </div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>