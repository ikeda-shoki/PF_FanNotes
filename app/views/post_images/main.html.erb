<div class="post-image-main main">
  <div class="container">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <% if user_signed_in? %>
          <%= render 'users/user_profile', user: current_user %>
        <% else %>
          <%= render 'layouts/info'%>
        <% end %>
      </div>

      <div class="post-image-index-main col-md-8">
        
        <div class="favorite-images">
          <h2>人気の作品</h2>
          <div class="slider-favorite">
            <% @ranking_post_images.each.with_index(1) do |ranking_post_image, i|%>
              <%= link_to post_image_path(ranking_post_image), class: "d-block" do %>
                  <div class="ranking-post-image">
                    <h6><%= "第#{i}位"%></h6>
                    <%= attachment_image_tag ranking_post_image, :image %>
                    <div class="post-image-text pt-2">
                      <i class="fas fa-user mr-2"></i><%= ranking_post_image.user.account_name %><br />
                      <%= ranking_post_image.title %><br />
                      <i class="fas fa-heart mr-1 text-danger"></i><%= ranking_post_image.favorites.count %>
                    </div>
                  </div>
                <% end %>
              <% end %>
          </div>
        </div>
        
        <div class="image-index">
          <h2>新着作品</h2>
          <div class="slider-new">
            <% @post_images.each do |post_image|%>
              <%= link_to post_image_path(post_image), class: "d-block" do %>
                <div class="main-post-image">
                  <%= attachment_image_tag post_image, :image %>
                  <div class="post-image-text pt-2">
                    <i class="fas fa-user mr-2"></i><%= post_image.user.account_name %><br />
                    <%= post_image.title %><br />
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        
        <% if user_signed_in? %>
          <div class="image-index-item follower-image">
            <h2>フォローユーザーの新着作品</h2>
            <% @following_users.each do |following_user| %>
              <h4><%= following_user.account_name %></h4>
              <%= render 'post_images/post_image_item', post_images: following_user.post_images.limit(4).order('id desc') %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>