<div class="post-image-index main">
  <div class="container">
    <div class="row">
      <div class="profile col-md-4">

      </div>
      <div class="post-image-index-main col-md-8">
        <div class="popular-art">

        </div>
        <div class="all-arts">
          <h2>新着作品</h2>
          <div class="d-flex flex-wrap">
            <% @post_images.each do |post_image| %>
              <div class="post-image">
                <%= attachment_image_tag post_image, :image, size: "150x150"%>
                <div class="post-image-text pt-2">
                  <i class="fas fa-user mr-2"></i><%= post_image.user.account_name %><br />
                  <%= post_image.title %>
                </div>
              </div>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>