<div class="post-image-index main">
  <div class="container">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <% if user_signed_in? %>
          <%= render 'users/user_profile', user: current_user %>
        <% else %>
          <%= render 'layouts/info'%>
        <% end %>
      </div>
      
      <div class="post-image-index-main col-md-8">
        <div class="popular-art">

        </div>
        <div class="image-index">
          <h2>新着作品</h2>
          <%= render 'post_images/post_image_item', post_images: @post_images %>
        </div>
        <% if user_signed_in? %>
          <div class="image-index-item follower-image">
            <h2>フォローユーザーの作品</h2>
            <%= render 'post_images/post_image_item', post_images: @follow_images %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>