<div class="post-image-new">
  <div class="container">
    <div class="row">
      <div class="post col-md-8 mx-auto">
        <%= render 'layouts/error_messages', model: @post_image %>
        <%= form_with model: @post_image, local: true do |f| %>
          <div class="field mb-4 row">
            <dt class="col-md-4 d-flex align-items-center flex-wrap">
              <%= f.label :title, "タイトル"%>
              <span class="require-icon">必須</span>
            </dt>
            <dl class="col-md-8">
              <%= f.text_field :title, placeholder: "タイトルを入力してください" %>
            </dl>
          </div>
          <div class="field mb-4 row">
            <dt class="col-md-4">
              <%= f.label :image_introduction, "説明"%>
            </dt>
            <dl class="col-md-8">
              <%= f.text_area :image_introduction, placeholder: "作品の内容を入力してください" %>
            </dl>
          </div>
          <div class="field mb-4 row">
            <dt class="col-md-4 d-flex align-items-center flex-wrap">
              <%= f.label :image, "イラスト"%>
              <span class="require-icon">必須</span>
            </dt>
            <dl class="col-md-8">
              <%= f.attachment_field :image %>
            </dl>
          </div>
          <div class="field mb-4 row">
            <dt class="col-md-4">
            </dt>
            <dl class="col-md-8">
              <img id="preview">
            </dl>
          </div>
          
          <div class="post-button text-center">
            <%= f.submit "投稿する", class: "btn white-button sp-button"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'layouts/back_button' %>
</div>