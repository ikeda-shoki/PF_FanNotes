<div class="requested main">
  <div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto text-center">
        <%= render 'users/user_profile', user: current_user %>
      </div>

      <div class="col-md-7 mx-auto">
        <div class="requested-title d-flex">
          <h2>依頼内容一覧</h2>
          <h3 class="ml-auto font-weight-bold">全<%= current_user.requested.count %>件</h3>
        </div>
        <div class="requests">
          <% @requests.each do |request| %>
            <%= link_to user_requested_show_path(user_id: request.requester_id, id: request) do %>
              <div class="request mb-4">
                <div class="request-user-image">
                  <%= attachment_image_tag request.requester, :profile_image, fallback: "no_image.jpg" %>
                </div>

                <div class="request-info py-3">
                  <h4><i class="fas fa-user mr-2"></i><%= request.requester.account_name %></h4>

                  <div class="d-flex request-info-items">
                    <div class="request-info-deadline">
                      <div class="d-flex flex-column flex-wrap">
                        <span class="request-info-deadline-title">依頼日</span><h5 class="d-inline-block"><%= l request.created_at, format: :date %></h5>
                        <span class="request-info-deadline-title">納期</span><h5 class="d-inline-block"><%= l request.deadline %></h5>
                      </div>
                    </div>
                    <div class="request-info-status ml-5">
                      <%= render 'layouts/request_status_buttons', request: request %>
                    </div>
                  </div>

                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <%= paginate @requests %>
        
      </div>
    </div>
  </div>
</div>