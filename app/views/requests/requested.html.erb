<div class="requested main">
  <div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto text-center">
        <%= render 'users/user_profile', user: current_user %>
      </div>

      <div class="col-md-7 mx-auto">
        <div class="requested-title d-flex">
          <h2>依頼内容一覧</h2>
          <h3 class="ml-auto font-weight-bold">全<%= current_user.requested.count %>件</h3>
        </div>
        <div class="requests">
          <% @requests.each do |request| %>
            <%= link_to user_requested_show_path(user_id: request.requester_id, id: request), class: "requested_request_repec" do %>
              <%= render 'requests/request_index_item', request_user: request.requester, request: request %>
            <% end %>
          <% end %>
        </div>
        <%= paginate @requests %>
      </div>
    </div>
  </div>
</div>