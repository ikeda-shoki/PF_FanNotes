<div class="request-done">
  <div class="row">
    <div class="post col-md-8 mx-auto">
      <h3 class="text-center mb-4"><%= @request.requester.account_name %>さんへのイラストが完成しました！</h3>
      <% @request.request_images.each do |request_image| %>
        <div class="request-complete-image text-center p-5 mb-5">
          <%= attachment_image_tag request_image, :complete_image %>
        </div>
      <% end %>
      <div class="back-button d-inline-block">
        <%= link_to user_requested_show_path(user_id: @request.requester_id, id: @request) do %>
          前の画面に戻る<i class="fas fa-arrow-circle-left fa-flip-horizontal ml-1"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>