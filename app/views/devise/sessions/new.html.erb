<div class="log-in">
  <div class="container row mx-auto">
    <div class="center-container col-md-4 mx-auto p-4 text-center">
      <h2 class="my-4">Log in</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="field mb-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mb-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions mb-3">
          <%= f.submit "Log In", class: "button btn-log-in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

