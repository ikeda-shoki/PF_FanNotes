<div class="sign-up">
  <div class="container mx-auto">
    <div class="center-container mx-auto text-center">
      <%= render "devise/shared/error_messages", resource: resource %>
      <h1>FanNotes</h1>
      <h2 class="my-4">Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field mb-3">
          <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name", placeholder: "\uf007  Name(本名)", class: "fa" %>
        </div>

        <div class="field mb-3">
          <%= f.text_field :account_name, autocomplete: "account_name", placeholder: "\uf007  AccountName(アプリで使用する名前)", class: "fa" %>
        </div>

        <div class="field mb-3">
          <%= f.email_field :email, autocomplete: "email", placeholder: "\uf0e0  Email", class: "fa" %>
        </div>

        <div class="field mb-3">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "\uf084  Password(6文字以上)", class: "fa" %>
        </div>

        <div class="field mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "\uf084  Password確認用", class: "fa" %>
        </div>

        <div class="actions mb-3">
          <%= f.submit "Sign Up", class: "button btn-sign-up" %>
        </div>
      <% end %>

      <%- if devise_mapping.omniauthable? %>
        <p class="mt-5 sns-button-title">他のアカウントからのログイン/登録はこちらから</p>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to  omniauth_authorize_path(resource_name, provider), class: "sns_button mb-3", method: :post do %>
            <% if provider === :twitter %>
              <span class="twitter-button"><i class="fab fa-twitter mr-2"></i>Sign in with Twitter</span>
            <% else %>
              <%= image_tag 'google_button.png' %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <div class="devise-buttons text-right">
        <%= link_to new_session_path(resource_name), class: "devise-link ml-auto" do %>
          Log In<i class="fas fa-arrow-right ml-2"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
