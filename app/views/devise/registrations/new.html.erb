<div class="sign-up">
  <div class="container row mx-auto">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="center-container col-md-4 mx-auto p-4 text-center">
      <h2 class="my-4">Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field mb-3">
          <%= f.label :account_name, "ユーザーネーム" %><br />
          <%= f.text_field :account_name, autofocus: true, autocomplete: "account_name" %>
        </div>

        <div class="field mb-3">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>6文字以上</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation, "パスワード確認用" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mb-3">
          <%= f.submit "Sign Up", class: "button btn-sign-up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
