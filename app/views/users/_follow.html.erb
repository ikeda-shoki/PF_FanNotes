<div class="follow-lists">
  <h3 class="mb-4"><%= follow_title %></h3>
  <div class="row">
    <% follows.each do |follow| %>
      <div class="follow-list col-md-6">
        <div class="row">
          <div class="follow-image col-md-6 pr-3">
            <%= attachment_image_tag follow, :profile_image, fallback: 'no_image.jpg' %>
          </div>
          <div class="follow-detaile col-md-6">
            <h3><%= follow.account_name %></h3>
            <div class="follow-dataile-buttons follow-button">
              <%= link_to "プロフィール", user_path(follow), class: "btn btn-info mb-2" %>
              <%= render 'layouts/follow_button', user: follow %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>