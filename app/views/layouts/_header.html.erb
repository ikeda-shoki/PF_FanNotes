<div class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">

      <%= link_to main_path, class: "navbar-brand" do %>
        <h1>FanNotes</h1>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to new_post_image_path, class: "nav-link active" do %>
                投稿する<i class="far fa-plus-square ml-2"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_path(current_user), class: "nav-link" do %>
                マイページ<i class="far fa-user ml-2"></i>
              <% end %>
            </li>
            <li class="nav-item" data-toggle="modal" data-target="#exampleModalLong" id="notification-modal-button">
              <%= render 'notifications/notification_icon'%>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
                ログアウト<i class="fas fa-sign-out-alt ml-2"></i>
              <% end %>
            </li>
          
            <!-- Modal -->
            <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">通知一覧</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  
                  <div id="notification-modal">
                    <%= render 'notifications/notification_modal', notifications: @notifications %>
                  </div>
                  
                </div>
              </div>
            </div>
          
          <% else %>
            <li class="nav-item">
              <%= link_to "トップページ", root_path, class: "nav-link active"%>
            </li>
            <li class="nav-item">
              <a href="#about" class="nav-link">このサイトについて</a>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: "nav-link"%>
            </li>
          <% end %>
        </ul>
      </div>
      
      
    </div>
    <% if user_signed_in? %>
      <%= render "layouts/search_form" %>
    <% end %>
  </nav>
</div>